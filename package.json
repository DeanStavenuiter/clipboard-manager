{
    "name": "trex",
    "version": "1.0.0",
    "description": "Trex is a clipboard manager for macOS with history and keyboard shortcuts",
    "main": "dist/main.js",
    "scripts": {
        "start": "npm run build && electron .",
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"wait-on http://localhost:5173 && electron .\"",
        "dev:renderer": "vite",
        "dev:main": "tsc src/main.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop --sourceMap --watch",
        "build": "npm run build:icons && npm run build:main && npm run build:renderer",
        "build:main": "tsc src/main.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --esModuleInterop",
        "build:renderer": "vite build && cp src/preload.js dist/ && cp -r assets dist/ && cp public/trex.png dist/",
        "preview": "vite preview",
        "electron-dev": "electron .",
        "electron-pack": "electron-builder",
        "dist": "electron-builder --publish=never",
        "dist:publish": "dotenv -e .env -- electron-builder --publish always",
        "pack": "electron-builder --dir",
        "build:icons": "png2icons assets/trex.png assets/icon -icns"
    },
    "keywords": [
        "clipboard",
        "manager",
        "macos",
        "productivity",
        "trex"
    ],
    "author": "Dean Stavenuiter",
    "license": "MIT",
    "dependencies": {
        "canvas": "^3.2.0",
        "electron-updater": "^6.6.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.0",
        "dotenv-cli": "^10.0.0",
        "electron": "^35.7.5",
        "electron-builder": "^24.6.4",
        "png2icons": "^2.0.1",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.deanstavenuiter.trex",
        "productName": "Trex",
        "directories": {
            "output": "release"
        },
        "icon": "assets/icon.icns",
        "publish": [
            {
                "provider": "github",
                "owner": "deanstavenuiter",
                "repo": "clipboard-manager"
            }
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "identity": null,
            "extendInfo": {
                "LSUIElement": true
            },
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "files": [
            "dist/main.js",
            "dist/index.html",
            "dist/preload.js",
            "dist/assets/",
            "dist/styles/",
            "assets/",
            "public/",
            "package.json"
        ]
    }
}
